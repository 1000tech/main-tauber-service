@import '_vars'
@import '_mixins'

::selection
    background $blue
    color $white

* 
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'Inter', sans-serif
    line-height 1.6
    color #333
    background-color #f4f4f4

    ::selection
        background $blue
        color $white

h1
    color $primary
    margin 1.5rem 0 0.8rem
    font-size 2rem
    font-weight 600
    @media (min-width $screen-md)
        font-size 2.5rem

h2
    color $primary
    margin 1.5rem 0 0.8rem
    font-size 1.7rem
    font-weight 600
    @media (min-width $screen-md)
        font-size 2rem
