root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
# Keep Markdown soft linebreaks and trailing spaces semantics
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.styl]
indent_style = space
indent_size = 4

[*.vue]
indent_style = space
indent_size = 4

[*.ts]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4
